<%- include('header',{signin: '<link href="/css/signin.css" rel="stylesheet">'}) -%>
    <div class="text-center">
        <form class="form-signin" method="POST">
            <i class="fas fa-home fa-5x" aria-hidden="true" ></i>
            <h1 class="h3 mb-3 font-weight-normal">Bejelentkezés</h1>
            <label for="inputEmail" class="sr-only">Email cím</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email cím" autocomplete="off" required autofocus>
            <label for="inputPassword" class="sr-only">Jelszó</label>
            <input type="password" name="passwordLast" id="inputPassword" class="form-control" placeholder="Jelszó" required>
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Bejelentkezés" />
            <a href="/reg" class="btn btn-lg btn-secondary btn-block">Regisztráció</a>
        </form>
    </div>
<%- include('footer') -%>